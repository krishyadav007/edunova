
<div class="modal-body" id="mathloader">

 
  
       <%= markdown(Note.friendly.find(params[:id]).file.split('___')[locals[:level] - 1].to_s) %>
      </div>
      <div class="modal-footer">
      	<% if locals[:level] == 0 %>
      	<% locals[:level] = 1 %>
      	<% end %>
<% @times = (Note.friendly.find(params[:id]).file.split('___')[locals[:level] - 1].to_s.html_safe.to_s.split.size / 280.0) %>
<script type="text/javascript">

	var time = parseFloat("<%= @times.to_s %>");
 var timer = setInterval( showDiv, (time*60000));


  function showDiv() {
    

   $('#timer').show();
clearInterval(timer);


  }

</script>
<div class="alert-warning pull-left"> <b> Next Level button will be displayed when you finish reading this section! (magic) </b> </div>
        <%= button_to "next level" ,  note_update_level_path(:note_id => @note.id , :query => locals[:level]) , :class => 'btn btn-success pull-right' , :id => 'timer' , :onclick => 'closemodal()' , :method => 'put' , remote: true , :style => 'display:none'  %>
      </div>
